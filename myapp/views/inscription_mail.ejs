<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>Inscription</title>
    <!-- Chargement des fichiers CSS de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../public/stylesheets/global.css">
    <link rel="stylesheet" href="../public/stylesheets/inscription.css">
</head>

<body>
    <!-- Chargement des fichiers JavaScript -->
    <script src="../JS/authentification.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <div class="d-flex justify-content-center">
        <div class="centre-vertical">
            <div class="card mx-auto b-2 my-2">
                <div class="card-header text-center">
                    <h4>Inscription de votre email</h4>
                </div>

                <div class="card-body ">
                    <form method="POST" action="/users/inscription">
                        <div class="form-group">
                            <label>Email</label>
                            <input id="email" type="email" name="email" class="form-control" placeholder="exemple@gmail.com" autofocus onchange="verifMail_inscription()">
                        </div>

                        <div class="form-group">
                            <span id="msg_email"></span>
                        </div>

                        <div class="form-group">
                            <label>Mot de passe</label>
                            <input type="password" class="form-control" id="mdp1" name="password" placeholder="Entrez votre mot de passe">
                        </div>

                        <div class="form-group">
                            <label>Confirmation du mot de passe</label>
                            <input type="password" class="form-control" id="mdp2" placeholder="Nouvelle saisie du mot de passe" onchange="verifMdp()">
                        </div>

                        <div class="form-group">
                            <label>Nom</label>
                            <input id="nom" type="text" class="form-control" name="nom" placeholder="Entrez votre nom" />
                        </div>
                        <div class="form-group">
                            <label>Prénom</label>
                            <input id="prenom" type="text" class="form-control" name="prenom" placeholder="Entrez votre prénom" />
                        </div>
                        <div class="form-group">
                            <label>Téléphone</label>
                            <input type="tel" class="form-control" id="tel" name="tel" placeholder="Entrez votre Téléphone" />
                        </div>
                        <div class="form-group">
                            <label>Sexe</label>
                            <select class="form-control" id="sexe" name="sexe">
                                <option>Homme</option>
                                <option>Femme</option>
                                <option>Autre</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Date de naissance</label>
                            <input type="date" min="1900-01-01" class="form-control" id="ddn" name="ddn" placeholder="Entrez votre date de naissance" />
                        </div>

                        <div class="form-group">
                            <label>adresse</label>
                            <input type="text" class="form-control" id="adresse" name="adresse" placeholder="Entrez votre adresse" />
                        </div>

                        <div class="form-group">
                            <label>Ville</label>
                            <input type="text" class="form-control" id="ville" name="ville" placeholder="Entrez votre ville" />
                        </div>

                        <div class="form-group">
                            <label>Pays</label>
                            <input type="text" class="form-control" id="pays" name="pays" placeholder="Entrez votre ville" />
                        </div>
                        <div class="text-center mt-4">
                            <button class="btn btn-primary" onclick="verifForm()">
                                S'inscrire
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<footer>
    <div class="bg-light text-center text-lg-start">
        <div class="text-center p-1" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2023 Copyright: <a class="text-black" href="index.html">JobHub</a>
        </div>
    </div>
</footer>

</html>