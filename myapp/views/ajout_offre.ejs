    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../CSS/global.css">
    <link rel="stylesheet" href="../CSS/connexion.css">
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            <!-- Logo et nom de l'entreprise -->
            <a class="navbar-brand" href="index.html">JobHub</a>
            <!-- Bouton pour afficher le menu sur les petits écrans -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Menu de navigation -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="index.html">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="utilisateur.html">Offres d'emploi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="a_propos.html">À propos</a>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-primary" type="submit" formaction="connexion.html">Rejoignez-nous</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="d-flex justify-content-center align-items-center">
        <div class="centre-vertical">
            <div class="card mx-auto b-2 my-2">
                <div class="card-header text-center">
                    <h4>Ajoutez une offre</h4>
                </div>
                <div class="card-body ">
                    <form method="POST" action="/offre/ajout">
                        <div class="mb-3">
                            <label for="name" class="form-label">Intitulé :</label>
                            <input autofocus name="intitule" type="text" class="form-control" id="intitule" placeholder="Entrez l'intitulé du poste">
                        </div>
                        <div class="mb-3">
                            <label for="Responsable" class="form-label">Responsable :</label>
                            <input name="Responsable" type="text" class="form-control" id="responsable" placeholder="Entrez le Responsable hierarchique">
                        </div>
                        <div class="mb-3">
                            <label for="lat" class="form-label">Latitude :</label>
                            <input name="lat" type="number" class="form-control" id="lat" placeholder="Entrez la latitude du siège social" step="0.00001">
                        </div>
                        <div class="mb-3">
                            <label for="long" class="form-label">Latitude :</label>
                            <input name="long" type="number" class="form-control" id="long" placeholder="Entrez la longitude du siège social" step="0.00001">
                        </div>
                        <div class="mb-3">
                            <label for="Rythme" class="form-label">Rythme :</label>
                            <input name="Rythme" type="number" class="form-control" id="rythme" placeholder="Entrez le rythme (ex : 35h/semaine)" step="0.5">
                        </div>
                        <div class="mb-3">
                            <label for="Salaire" class="form-label">Salaire :</label>
                            <input name="Salaire" type="number" class="form-control" id="salaire" placeholder="Entrez le salaire (ex : 1950 €/mois)" step="1">
                            <span> €/mois </span>
                        </div>
                        <div class="mb-3">
                            <label for="Missions" class="form-label">Missions :</label>
                            <input name="Missions" type="text" class="form-control" id="missions" placeholder="Entrez les Missions">
                        </div>
                        <div class="mb-3">
                            <label for="Activite" class="form-label">Activités :</label>
                            <input name="Activite" type="text" class="form-control" id="activites" placeholder="Entrez les Activités">
                        </div>
                        <div class="mb-3">
                            <label for="Competences" class="form-label">Compétences :</label>
                            <input name="Competences" type="text" class="form-control" id="competences" placeholder="Entrez les Compétences attendues">
                        </div>
                        <div class="mb-3">
                            <label for="Statut" class="form-label">Statut :</label>
                            <input name="Statut" type="text" class="form-control" id="statut" placeholder="Entrez les Statut du poste">
                        </div>




                        <div class=" text-center mt-4 ">
                            <button type="submit " class="btn btn-primary btn-block ">Ajouter l'offre</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

