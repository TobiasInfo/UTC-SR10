<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('./partials/head'); %>
        <link rel="stylesheet" href="../CSS/utilisateur.css">
</head>

<header>
    <%- include('./partials/header'); %>
</header>

<body>

    <h1>Liste des Entreprises</h1>

    <% entreprises.forEach((entreprise)=> { %>
        <div class="container-fluid media ml-5 mr-5 my-2">
            <div class="row">
                <div class="col">
                    <div class="media-body">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex">
                                    <div style="justify-content : center;">
                                        <h4 class="media-heading">
                                            <%= entreprise.nom %>
                                        </h4>
                                        <p> </p>
                                        <p>SIREN : <%= entreprise.siren %>
                                        </p>
                                        <p>Type : <%= entreprise.type_organisation %>
                                        </p>
                                    </div>
                                </div>
                            </div>


                            <div class="col-auto my-auto">
                                <div class="d-flex">
                                    <form action="/admin/delete_entreprise" method="POST">
                                        <input type="hidden" name="siren" value="<%= entreprise.siren %>">
                                        <button type="submit" class="btn btn-danger">Supprimer l'entreprise</button>
                                    </form>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>

<%- include('./partials/footer'); %>

</html>