<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('./partials/head'); %>
        <link rel="stylesheet" href="/CSS/connexion.css">
</head>

<header>
    <%- include('./partials/header'); %>
</header>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>



    <div class="d-flex justify-content-center align-items-center">
        <div class="centre-vertical">
            <div class="card mx-auto b-2 my-2">
                <div class="card-header text-center">
                    <h4>Connexion</h4>
                </div>
                <div class="card-body ">
                    <form method="POST" action="/login/auth">
                        <% if (typeof msg_new_user != 'undefined') { %>
                            <div class="alert alert-success text-center" role="alert">
                                <%= msg_new_user %>
                            </div>
                        <% } %>

                        <% if (typeof pls_login != 'undefined') { %>
                            <div class="alert alert-success text-center role="alert">
                                <%= pls_login %>
                            </div>
                        <% } %>
                        <% if (msg && msg.trim() !== "") { %>
                            <div class="alert alert-danger text-center" role="alert">
                                <%= msg %>
                            </div>
                        <% } %>
                        
                        
                        <div class="mb-3">
                            <label for="email_connexion" class="form-label">Adresse mail</label>
                            <input autofocus name="email" type="email" class="form-control" id="email_connexion"
                                placeholder="blacklist@fbi.com" required>
                        </div>

                        <label for="password_connexion" class="form-label">Mot de passe</label>
                        <div class="mb-3 form-group visibility_password">
                            <input name="password" type="password" class="form-control" id="password_connexion"
                                placeholder="hypersecure" required>
                            <div class="password-icon">
                                <span class="material-symbols-outlined visibility">
                                    visibility
                                </span>
                                <span class="material-symbols-outlined visililityOff">
                                    visibility_off
                                </span>
                            </div>
                        </div>
                        <% if (typeof error != 'undefined') { %>
                            <div class="alert alert-danger" role="alert">
                                <%= error %>
                            </div>
                        <% } %>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mx-auto my-2">
                <div class="card-header text-center">
                    <h5>Vous n'avez pas encore de compte ?</h5>
                </div>

                <div class="card-body ">
                    <div class="text-center ">
                        <a href="/users/inscription" class="btn btn-primary btn-block ">Inscrivez-vous !</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<%- include('./partials/footer'); %>
    <script>
        const eye = document.querySelector(".visibility_password .password-icon .visibility");
        const eyeoff = document.querySelector(".visibility_password .password-icon .visililityOff");
        const passwordField = document.querySelector("#password_connexion");
        eye.addEventListener("click", () => {
            eye.style.display = "none";
            eyeoff.style.display = "block";
            passwordField.type = "text";
        });

        eyeoff.addEventListener("click", () => {
            console.log("click");
            eyeoff.style.display = "none";
            eye.style.display = "block";
            passwordField.type = "password";
        });
    </script>
</html>