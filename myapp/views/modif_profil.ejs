<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('./partials/head'); %>
        <link rel="stylesheet" href="/CSS/connexion.css">
</head>

<header>
    <%- include('./partials/header'); %>
</header>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <div class="d-flex justify-content-center align-items-center" style="height: 100%;">
        <div class="centre-vertical">
            <div class="card mx-auto b-2 my-2">
                <div class="card-header text-center">
                    <h4>Modifiez votre profil</h4>
                </div>
                <% if (typeof message !=='undefined' ) { %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%= message %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="card-body ">
                    <form method="POST" action="/users/changed_infos">

                        <% if (typeof nom !=='undefined' ) { %>
                                <div class="mb-3">
                                    <label for="name" class="form-label">Nom :</label>
                                    <input autofocus name="nom" type="text" class="form-control" id="name"
                                        placeholder="Votre ancien nom : <%= nom %>">
                                </div>
                        <% } %>
                        
                        <% if (typeof prenom !=='undefined' ) { %>
                            <div class="mb-3">
                                <label for="prenom" class="form-label">Prénom :</label>
                                <input autofocus name="prenom" type="text" class="form-control" id="prenom"
                                    placeholder="Votre ancien prénom : <%= prenom %>">
                            </div>
                        <% } %>
                        
                        <% if (typeof tel !=='undefined' ) { %>
                            <div class="mb-3">
                                <label for="tel" class="form-label">Téléphone :</label>
                                <input autofocus name="tel" type="text" class="form-control" id="tel"
                                    placeholder="Votre ancien numéro : <%= tel %>">
                            </div>
                        <% } %>
                        
                        <% if (typeof sexe !=='undefined' ) { %>
                            <div class="mb-3">
                                <label for="sexe" class="form-label">Sexe :</label>
                            
                                <div class="form-group container_icon_right">
                                    <select class="form-control" id="sexe" name="sexe">
                                        <option selected disabled>Votre ancien sexe : <%= sexe %></option>
                                        <option>Homme</option>
                                        <option>Femme</option>
                                        <option>Autre</option>
                                    </select>
                                    <span class="material-symbols-outlined icon_right">
                                        arrow_drop_down
                                    </span>
                                </div>
                            </div>
                        <% } %>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-block">Appliquer</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
</body>

<%- include('./partials/footer'); %>

</html>